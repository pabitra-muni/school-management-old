<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="application-context-core.xml"/>
    
    <bean id="loginValidator" class="org.ahant.controller.LoginValidatorImpl">
        <property name="loginDao" ref="loginDao"/>
    </bean>

    <bean id="loginDao" class="org.ahant.dao.LoginDaoImpl">
        <property name="userPasswordQuery" value="${query.user.get.password}"/>
    </bean>

</beans>